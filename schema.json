{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Generated schema for Root",
  "type": "object",
  "properties": {
    "metadata": { "type": "string" },
    "grid": {
      "type": "object",
      "properties": {
        "width": {
          "type": "number"
        },
        "height": {
          "type": "number"
        },
        "cell_size": {
          "type": "number"
        },
        "x_orig": {
          "type": "number"
        },
        "y_orig": {
          "type": "number"
        },
        "angle_orig": {
          "type": "number"
        },
        "data": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "integer",
              "minimum": -1,
              "maximum": 1
            }
          }
        }
      },
      "required": [
        "width",
        "height",
        "cell_size",
        "x_orig",
        "y_orig",
        "angle_orig",
        "data"
      ]
    },
    "walls": {
      "type": "array",
      "items": {
        "type": "array",
        "items": {
          "type": "number"
        },
        "minItems": 4,
        "maxItems": 4
      },
      "additionalItems": false       
    },
    "sequence": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "number"
          },
          "robot": {
            "type": "object",
            "properties": {
              "shape": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["circle", "rectangle"]
                  },
                  "width": {
                    "type": "number"
                  },
                  "length": {
                    "type": "number"
                  }
                },
                "required": [
                  "type",
                  "width",
                  "length"
                ]
              },
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              },
              "angle": {
                "type": "number"
              },
              "speed_x": {
                "type": "number"
              },
              "speed_y": {
                "type": "number"
              },
              "speed_a": {
                "type": "number"
              }
            },
            "required": [
              "shape",
              "x",
              "y",
              "angle",
              "speed_x",
              "speed_y",
              "speed_a"
            ]
          },
          "goal": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": ["go-to", "guide-to", "follow"]
              },
              "human": {},
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              },
              "angle": {
                "type": "number"
              },
              "pos_threshold": {
                "type": "number"
              },
              "angle_threshold": {
                "type": "number"
              }
            },
            "required": [
              "type",
              "human",
              "x",
              "y",
              "angle"
            ]
          },
          "people": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "number"
                },
                "x": {
                  "type": "number"
                },
                "y": {
                  "type": "number"
                },
                "angle": {
                  "type": "number"
                }
              },
              "required": [
                "id",
                "x",
                "y",
                "angle"
              ]
            }
          },
          "objects": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "number"
                },
                "type": {
                  "type": "string",
                  "enum": ["chair", "table", "plant", "tv", "shelf", "floor_lamp"]
                },
                "x": {
                  "type": "number"
                },
                "y": {
                  "type": "number"
                },
                "angle": {
                  "type": "number"
                },
                "shape": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["circle", "rectangle"]
                    },
                    "width": {
                      "type": "number"
                    },
                    "length": {
                      "type": "number"
                    }
                  },
                  "required": [
                    "type",
                    "width",
                    "length"
                  ]
                }
              },
              "required": [
                "id",
                "type",
                "x",
                "y",
                "angle",
                "shape"
              ]
            }
          }
        },
        "required": [
          "timestamp",
          "robot",
          "goal",
          "people",
          "objects"
        ]
      },
      "additionalItems": false
    }
  },
  "required": [
    "grid",
    "walls",
    "sequence"
  ]
}
